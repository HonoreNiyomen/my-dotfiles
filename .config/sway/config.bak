set $mod Mod4
set $alt Mod1

# Enviromental variables for systemd users
include ~/.config/sway/scripts/systemd-user.conf

# Auto exec applications
output * bg ~/Pictures/Wallpaper.jpg fill
exec --no-startup-id picom --config ~/.config/picom/picom.conf
exec --no-startup-id waybar


# touchpad
input "type:touchpad" {
    tap enabled
    natural_scroll enabled
    middle_emulation enabled
}

# screen resolution
output eDP-1 resolution 1366x768 position 0,0

# idle lock screen
 exec swayidle -w \
          timeout 300 'swaylock -f -c 000000' \
          timeout 600 'swaymsg "output * dpms off"' resume 'swaymsg "output * dpms on"' \
          before-sleep 'swaylock -f -c 000000'

## Volume && Brightness
bindsym XF86AudioRaiseVolume exec --no-startup-id ~/.config/sway/scripts/volume.sh +5
bindsym XF86AudioLowerVolume exec --no-startup-id ~/.config/sway/scripts/volume.sh -5
bindsym XF86AudioMute exec --no-startup-id pamixer --toggle-mute && ~/.config/sway/scripts/volume.sh 0
bindsym XF86MonBrightnessUp exec --no-startup-id ~/.config/sway/scripts/brightness.sh +4%
bindsym XF86MonBrightnessDown exec --no-startup-id ~/.config/sway/scripts/brightness.sh 4%-

## Music Controls
bindsym $alt+Ctrl+space exec audacious -t
bindsym $alt+0 exec audacious -f
bindsym $alt+9 exec audecious -p

## Power menu
bindsym XF86PowerOff exec ~/.config/sway/scripts/power-menu.sh

# Focus follows mouse
focus_follows_mouse yes

# Launch terminal, browser, file manager
bindsym $mod+Return exec alacritty
bindsym $alt+x      exec firefox-esr
bindsym $alt+z      exec nemo
bindsym $alt+c      exec firefox-esr --new-window --class webapp "https://chatgpt.com/"

## enter fullscreen mode for the focused container
bindsym XF86LaunchA fullscreen toggle

# App launcher
bindsym $mod+Space exec wofi --show drun

# Close window
bindsym Ctrl+comma kill

# Fullscreen
bindsym $mod+f fullscreen toggle

# Split layout
bindsym $mod+v split vertical
bindsym $mod+b split horizontal

# Move focus (hjkl or arrows)
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# Move the focused window with the same, but add Shift
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

## auto back & forth workspace
workspace_auto_back_and_forth yes

# Toggle floating
bindsym $mod+Shift+f floating toggle

# Drag floating windows with mouse
floating_modifier $mod

# Screenshot
bindsym $mod+p exec grim ~/Pictures/screenshot_$(date +'%F_%T').png
bindsym $mod+$alt+Print exec grim -g "$(slurp)" - | wl-copy

# Reload & exit
bindsym $mod+Shift+c reload
bindsym $mod+Shift+e exec swaynag -t warning -m 'You pressed the exit shortcut. Do you really want to exit sway? This will end your Wayland session.' -B 'Yes, exit sway' 'swaymsg exit'

# Define names for default workspaces for which we configure key bindings later on.
# We use variables to avoid repeating the names in multiple places.
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"

## switch to workspace
bindsym $alt+1 workspace number $ws1
bindsym $alt+2 workspace number $ws2
bindsym $alt+3 workspace number $ws3
bindsym $alt+4 workspace number $ws4
bindsym $alt+5 workspace number $ws5
bindsym $alt+6 workspace number $ws6
bindsym $alt+7 workspace number $ws7
bindsym $alt+8 workspace number $ws8

## move focused container to workspace
bindsym $alt+Shift+1 move container to workspace number $ws1
bindsym $alt+Shift+2 move container to workspace number $ws2
bindsym $alt+Shift+3 move container to workspace number $ws3
bindsym $alt+Shift+4 move container to workspace number $ws4
bindsym $alt+Shift+5 move container to workspace number $ws5
bindsym $alt+Shift+6 move container to workspace number $ws6
bindsym $alt+Shift+7 move container to workspace number $ws7
bindsym $alt+Shift+8 move container to workspace number $ws8

# Gaps
gaps inner 3
gaps outer 2
bindsym $mod+Ctrl+0 gaps inner all set 0

default_border none 
for_window [title="^.*"] title_format ""
default_border pixel 1
default_floating_border pixel 1

## System Colours â€” very faint gray palette
set $text        #cdd6f4
set $faint       #cccccc
set $subtext1    #bac2de
set $surface0    #313244
set $base        #1e1e2e
set $mantle      #181825

# target                 title     bg      text      indicator   border
client.focused           $text     $base   $text     $text
client.focused_inactive  $surface0 $base   $mantle   $surface0
client.unfocused         $surface0 $base   $mantle   $surface0
client.urgent            $text     $base   $mantle   $surface0
client.placeholder       $surface0 $base   $mantle   $surface0
client.background        $base

#include /etc/sway/config.d/*
